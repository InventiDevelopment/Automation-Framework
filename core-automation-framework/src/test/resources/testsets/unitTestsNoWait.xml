<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Unit Tests Without Automatic Wait">
    <test name="Core Components Tests">
        <classes>
            <class name="cz.inventi.sample.framework.tests.unit.DriverTests"/>
            <class name="cz.inventi.sample.framework.tests.unit.LoggerTests"/>
        </classes>
    </test>
    <test name="Wait Tests">
        <classes>
            <class name="cz.inventi.sample.framework.tests.unit.config.DoNotWaitAutomaticallyTest"/>
        </classes>
    </test>
    <test name="Config Tests">
        <classes>
            <class name="cz.inventi.sample.framework.tests.unit.config.CustomConfigTests"/>
        </classes>
    </test>
    <test name="Language Tests">
        <classes>
            <class name="cz.inventi.sample.framework.tests.unit.language.LanguageTest"/>
        </classes>
    </test>
    <test name="WebObject Tests">
        <classes>
            <class name="cz.inventi.sample.framework.tests.unit.webobjects.WebObjectTest"/>
            <class name="cz.inventi.sample.framework.tests.unit.webobjects.WebElementTests">
                <methods>
                    <exclude name="clickJSTest"/>
                    <exclude name="hoverTest"/>
                </methods>
            </class>
            <class name="cz.inventi.sample.framework.tests.unit.webobjects.WebComponentTests"/>
            <class name="cz.inventi.sample.framework.tests.unit.webobjects.WebComponentListTests"/>
            <class name="cz.inventi.sample.framework.tests.unit.webobjects.WebPageTests"/>
        </classes>
    </test>
</suite> <!-- Suite -->
