<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Unit Tests Without Automatic Wait">
    <test name="Core Components Tests">
        <classes>
            <class name="cz.inventi.qa.framework.tests.unit.web.DriverTests"/>
            <class name="cz.inventi.qa.framework.tests.unit.logger.LoggerTests"/>
        </classes>
    </test>
    <test name="Wait Tests">
        <classes>
            <class name="cz.inventi.qa.framework.tests.unit.web.config.DoNotWaitAutomaticallyTest"/>
        </classes>
    </test>
    <test name="Config Tests">
        <classes>
            <class name="cz.inventi.qa.framework.tests.unit.config.CustomAppConfigTests"/>
        </classes>
    </test>
    <test name="Language Tests">
        <classes>
            <class name="cz.inventi.qa.framework.tests.unit.web.language.LanguageWebTest"/>
        </classes>
    </test>
    <test name="WebObject Tests">
        <classes>
            <class name="cz.inventi.qa.framework.tests.unit.web.webobjects.WebApplicationObjectWebFlow"/>
            <class name="cz.inventi.qa.framework.tests.unit.web.webobjects.ElementTests">
                <methods>
                    <exclude name="clickJSTest"/>
                    <exclude name="hoverTest"/>
                </methods>
            </class>
            <class name="cz.inventi.qa.framework.tests.unit.web.webobjects.ComponentTests"/>
            <class name="cz.inventi.qa.framework.tests.unit.web.webobjects.ComponentListTests"/>
            <class name="cz.inventi.qa.framework.tests.unit.web.webobjects.PageTests"/>
        </classes>
    </test>
</suite> <!-- Suite -->
